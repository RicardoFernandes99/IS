import pandas as pd
from pymongo import MongoClient
import json

def mongoimport(csv_path, db_name, coll_name, db_url='localhost', db_port=27017):
    """ Imports a csv file at path csv_name to a mongo colection
    returns: count of the documants in the new collection
    """
    client = MongoClient(db_url, db_port)
    db = client[db_name]
    coll = db[coll_name]
    data = pd.read_csv(csv_path)
    payload = json.loads(data.to_json(orient='records'))
    if coll_name in db.list_collection_names():
        coll.drop()

    coll.insert_many(payload)
    count = coll.count_documents({})
    
    client.close()
    return count

def main():
    csv_path = 'idealista_houses.csv'
    db_name = 'local'
    coll_name = 'Idealista'
    
    count = mongoimport(csv_path, db_name, coll_name)
    print(f"Imported {count} documents into {db_name}.{coll_name}")

if __name__ == "__main__":
    main()